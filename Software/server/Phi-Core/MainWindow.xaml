<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Phi_Core.MainWindow"
        Title="MainWindow" Width="506" Height="372.85" Loaded="Window_Loaded">
    <DockPanel x:Name="RootPanel" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" >
        <DockPanel x:Name="TitlePanel" VerticalAlignment="Top" DockPanel.Dock="Top">
            <Image x:Name="image" HorizontalAlignment="Left" Source="Letter_Phi.jpg" Width="60"/>
            <TextBlock TextWrapping="Wrap" Text="Phi Core" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <Grid DockPanel.Dock="Right">
                <TextBox x:Name="LinkStatusLabel" TextWrapping="Wrap" Text="Link Status" VerticalAlignment="Top" Margin="39,10,0,0" HorizontalAlignment="Left" RenderTransformOrigin="0.155,0.348" BorderThickness="0" Height="20" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="LinkStatusText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="OFF" VerticalAlignment="Top" RenderTransformOrigin="1.192,5.435" Margin="115,10,10,0" BorderThickness="0" Background="PaleVioletRed" Foreground="White" FontWeight="Bold" Width="157" Height="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="LinkStatusLabel_Copy" TextWrapping="Wrap" Text="Frame Rate" VerticalAlignment="Top" Margin="40,35,0,0" HorizontalAlignment="Left" RenderTransformOrigin="0.155,0.348" BorderThickness="0" Height="20"/>
                <TextBox x:Name="LinkFrameRateText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="NC" VerticalAlignment="Top" RenderTransformOrigin="1.192,5.435" Margin="115,35,0,0" BorderThickness="0" FontWeight="Bold" Width="157" Height="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
        </DockPanel>
        <Grid DockPanel.Dock="Bottom" HorizontalAlignment="Left" RenderTransformOrigin="0.123,1.565" Margin="20,10,10,0" Height="223">
            <Canvas x:Name="Phi_Camera" Margin="10,10,298,93" Width="160" Height="120" RenderTransformOrigin="0.954,0.891">
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Canvas.Background>
            </Canvas>
            <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="Phi Camera" VerticalAlignment="Top" Margin="57,135,0,0" DockPanel.Dock="Top" HorizontalContentAlignment="Stretch"/>
            <DockPanel x:Name="GyroIndicator" HorizontalAlignment="Left" LastChildFill="False" VerticalAlignment="Top" Margin="198,10,0,0">
                <Canvas HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" Width="60" Margin="0" RenderTransformOrigin="1.567,1.717" DockPanel.Dock="Bottom" Background="#FFE6EEE7">
                </Canvas>
                <TextBox TextWrapping="Wrap" Text="Pitch" Canvas.Left="16" Canvas.Top="-23" RenderTransformOrigin="-0.094,0.445" Margin="0" VerticalAlignment="Bottom" DockPanel.Dock="Top" HorizontalAlignment="Center" Panel.ZIndex="1" BorderThickness="0"/>
            </DockPanel>
            <DockPanel x:Name="GyroIndicator_Copy" HorizontalAlignment="Left" LastChildFill="False" VerticalAlignment="Top" Margin="277,10,0,0" RenderTransformOrigin="2.183,0.592">
                <Canvas HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" Width="60" Margin="0" RenderTransformOrigin="1.567,1.717" DockPanel.Dock="Bottom" Background="#FFE6EEE7"/>
                <TextBox TextWrapping="Wrap" Text="Yaw" Canvas.Left="16" Canvas.Top="-23" RenderTransformOrigin="-0.094,0.445" Margin="0" VerticalAlignment="Bottom" DockPanel.Dock="Top" HorizontalAlignment="Center" Panel.ZIndex="1" BorderThickness="0"/>
            </DockPanel>
            <DockPanel x:Name="GyroIndicator_Copy1" HorizontalAlignment="Left" LastChildFill="False" VerticalAlignment="Top" Margin="360,10,0,0">
                <Canvas HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" Width="60" Margin="0" RenderTransformOrigin="1.567,1.717" DockPanel.Dock="Bottom" Background="#FFE6EEE7"/>
                <TextBox TextWrapping="Wrap" Text="Roll" Canvas.Left="16" Canvas.Top="-23" RenderTransformOrigin="-0.094,0.445" Margin="0" VerticalAlignment="Bottom" DockPanel.Dock="Top" HorizontalAlignment="Center" Panel.ZIndex="1" BorderThickness="0"/>
            </DockPanel>
            <Button x:Name="ActivateLink" Content="Enable" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,193,0,0" Click="ActivateLink_Click"/>
        </Grid>
    </DockPanel>

</Window>
